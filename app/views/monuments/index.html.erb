<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-8" data-controller="insert-in-list">

      <h1>Monuments</h1>

      <div id="monuments" data-insert-in-list-target="items">
        <% @monuments.each do |monument| %>
          <%= render monument %>
          <p>
            <%= link_to "Show this monument", monument %>
          </p>
        <% end %>
      </div>

      <div data-controller="toggle">
        <button class="btn btn-primary" data-action="click->toggle#fire">Add a new monument!</button>

        <div  class="mt-3 d-none" data-toggle-target="togglableElement">
          <%= render "form", monument: @monument %>
        </div>
      </div>

    </div>
  </div>
</div>

<p style="color: green"><%= notice %></p>
